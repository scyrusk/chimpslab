<% content_for :title do %><%= @publication.title %><% end %>

<h1><%= @publication.title %></h1>

<div class="span-3">
	<b>Authors</b>
</div>
<div class="span-15 last">
	<%= link_to_authors @publication.authors_list, @people %>
</div>
<hr class="space" />

<div class="span-3">
	<b>Venue</b>
</div>
<div class="span-15 last">
	<%= @publication.venue_name %>
</div>
<hr class="space" />

<div class="span-3">
	<b>Year</b>
</div>
<div class="span-15 last">
	<%= @publication.year %>
</div>


<% unless @publication.abstract.blank? %>
	<hr class="space" />
	<div class="span-3">
		<b>Abstract</b>
	</div>
	<div class="span-15 last">
		<%= @publication.abstract %>
	</div>
<% end %>

<hr class="doublespace" />

<h2>Comments</h2>

<!-- Facebook Comments -->
<div id="fb-root"></div>
<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
<fb:comments href="<%= request.url %>" numposts="10" width="700"></fb:comments>

<% content_for :sb do %>
	<% if authorized? %>
		<h2>Actions</h2>
		<p>
			<%= link_to 'Edit', edit_publication_path(@publication) %> <span class="pipe">|</span>
			<%= link_to 'Destroy', @publication, :confirm => 'Are you sure?', :method => :delete %>
		</p>
	<% end %>
	
	<h2>Share</h2>
	
	<!-- Twitter Button -->
	<a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
	
	<!-- Facebook Like Button -->
	<iframe src="http://www.facebook.com/plugins/like.php?href=<%= CGI.escape(request.url) %>&amp;layout=standard&amp;show_faces=true&amp;width=200&amp;action=like&amp;colorscheme=light&amp;height=80" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:200px; height:80px;" allowTransparency="true"></iframe>
<% end %>